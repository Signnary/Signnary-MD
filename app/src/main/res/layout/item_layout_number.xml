<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="8dp">

    <ImageView
        android:id="@+id/number_image"
        android:layout_width="156dp"
        android:layout_height="298dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/shape" />

    <ImageView
        android:id="@+id/number_text_background"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@id/number_image"
        app:layout_constraintEnd_toEndOf="@id/number_image"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/number_image"
        tools:src="@drawable/buttonshape" />

    <TextView
        android:id="@+id/number_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/number_text_background"
        app:layout_constraintStart_toStartOf="@id/number_text_background"
        app:layout_constraintEnd_toEndOf="@id/number_text_background"
        app:layout_constraintBottom_toBottomOf="@id/number_text_background"
        tools:numeric="decimal" />

</androidx.constraintlayout.widget.ConstraintLayout>
