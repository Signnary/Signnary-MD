<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="8dp">

    <ImageView
        android:id="@+id/abjad_image"
        android:layout_width="156dp"
        android:layout_height="298dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/shape" />

    <ImageView
        android:id="@+id/abjad_text_background"
        android:layout_width="129dp"
        android:layout_height="33dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toBottomOf="@id/abjad_image"
        app:layout_constraintEnd_toEndOf="@id/abjad_image"
        app:layout_constraintHorizontal_bias="0.263"
        app:layout_constraintStart_toStartOf="@id/abjad_image"
        tools:src="@drawable/buttonshape" />

    <TextView
        android:id="@+id/abjad_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/abjad_text_background"
        app:layout_constraintEnd_toEndOf="@id/abjad_text_background"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="@id/abjad_text_background"
        app:layout_constraintTop_toTopOf="@id/abjad_text_background"
        tools:text="A" />

</androidx.constraintlayout.widget.ConstraintLayout>
